<script>
    function showItems () {
        document.getElementById("hidden-list").style.display = "block";
    }

    document.getElementById("para-heading").innerHTML = "A Little About Me"
    document.getElementById("para-body").innerHTML = "Hello, my name is Javonn M. Jackson. I live In Huntington, WV. I am 21 and I have a dog named scrappy doo that is part chiwawa and part pomeranian; my goal in the future is I want to be a professional illustrator/frelance cartoonist.";

    function showDateAndTime () {
        document.body.innerHTML += "<div> Today's date and time is " + new Date() + "</div>";
    }
